# Define the modules (MIBs) to scrape for QNAP device
modules:
  # QNAP system module to collect basic system info
  qnap_system:
    walk:
      - 1.3.6.1.2.1.1  # System info (sysUpTime, sysName, etc.)
      - 1.3.6.1.4.1.24681.1.2.1  # QNAP specific system info (QNAP OID for uptime, version)
    metrics:
      - name: sysUpTime
        oid: 1.3.6.1.2.1.1.3
        type: gauge
        help: The time (in hundredths of a second) since the network management portion of the system was last re-initialized.
      - name: sysName
        oid: 1.3.6.1.2.1.1.5
        type: gauge
        help: The name of the system as a string.
      - name: qnap_model
        oid: 1.3.6.1.4.1.24681.1.2.1.1
        type: gauge
        help: The model of the QNAP device.
      - name: qnap_version
        oid: 1.3.6.1.4.1.24681.1.2.1.2
        type: gauge
        help: The firmware version of the QNAP device.

  # QNAP CPU and Memory monitoring module
  qnap_cpu_memory:
    walk:
      - 1.3.6.1.4.1.24681.1.4.1  # QNAP specific OID for CPU and Memory stats
    metrics:
      - name: cpuUsage
        oid: 1.3.6.1.4.1.24681.1.4.1.1.1
        type: gauge
        help: The current CPU usage percentage.
      - name: memTotal
        oid: 1.3.6.1.4.1.24681.1.4.2.1.1
        type: gauge
        help: The total physical memory on the system (in bytes).
      - name: memUsed
        oid: 1.3.6.1.4.1.24681.1.4.2.1.2
        type: gauge
        help: The used physical memory on the system (in bytes).

  # QNAP Disk monitoring module
  qnap_disks:
    walk:
      - 1.3.6.1.2.1.25.2.3.1  # Storage devices OID
    metrics:
      - name: diskSize
        oid: 1.3.6.1.2.1.25.2.3.1.5
        type: gauge
        help: The size of the disk in bytes.
      - name: diskUsed
        oid: 1.3.6.1.2.1.25.2.3.1.6
        type: gauge
        help: The used space on the disk in bytes.
      - name: diskFree
        oid: 1.3.6.1.2.1.25.2.3.1.7
        type: gauge
        help: The free space on the disk in bytes.
      - name: diskStatus
        oid: 1.3.6.1.2.1.25.2.3.1.8
        type: gauge
        help: The status of the disk (0 = OK, 1 = Warning, 2 = Critical, etc.).

  # QNAP Network interface monitoring module
  qnap_network:
    walk:
      - 1.3.6.1.2.1.2  # Interface stats (ifTable)
    metrics:
      - name: ifInBytes
        oid: 1.3.6.1.2.1.2.2.1.10
        type: counter
        help: The number of incoming bytes on the network interface.
      - name: ifOutBytes
        oid: 1.3.6.1.2.1.2.2.1.16
        type: counter
        help: The number of outgoing bytes on the network interface.
      - name: ifInErrors
        oid: 1.3.6.1.2.1.2.2.1.14
        type: counter
        help: The number of incoming errors on the network interface.
      - name: ifOutErrors
        oid: 1.3.6.1.2.1.2.2.1.20
        type: counter
        help: The number of outgoing errors on the network interface.

  # QNAP Temperature Monitoring (if available)
  qnap_temperature:
    walk:
      - 1.3.6.1.4.1.24681.1.2.6  # QNAP temperature OID
    metrics:
      - name: temperature
        oid: 1.3.6.1.4.1.24681.1.2.6.1.1
        type: gauge
        help: The temperature of the QNAP device in Celsius.

# Timeout for SNMP queries
timeout: 5s

